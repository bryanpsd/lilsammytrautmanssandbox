---
interface Props {
  src: string; // Use importedImage.src or a public path
  alt: string;
  caption?: string;
}

import * as s from "./Figure.css";

const { src, alt, caption } = Astro.props as Props;
---

<figure>
  <img src={src} alt={alt} class={s.image} loading="lazy" decoding="async" />
  {caption && <figcaption class={s.caption}>{caption}</figcaption>}
</figure>
