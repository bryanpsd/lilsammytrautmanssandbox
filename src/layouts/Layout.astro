---
import '../styles';
import BaseHead from '../components/BaseHead.astro';
import '../styles/global/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const { title, description, image, canonicalURL } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      canonicalURL={canonicalURL}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
